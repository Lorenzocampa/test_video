ColumnLimit: 180
IncludeBlocks: Regroup
IndentCaseLabels: false
IndentWidth: 4
Language: Cpp
LineEnding: LF
NamespaceIndentation: All
PointerAlignment: Left
SortIncludes: false
SpaceBeforeAssignmentOperators: true
Standard: c++20
TabWidth: 4
UseTab: true